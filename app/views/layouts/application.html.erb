<!DOCTYPE html>
<html>
<head>
  <title>Vetted</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%ENV['GOOGLE_API_KEY']%>&sensor=false"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular.min.js"></script>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
        </a>
        <div class="nav-collapse">
          <% if user_signed_in? %>
            <ul class="nav">
              <li class="navbar-text">Logged in as <%= current_user.email %></li>
              <li><%= link_to "Edit Profile", edit_user_registration_path, :class => 'navbar-link' %> </li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %></li>
            </ul>
            <a href="/things/new"><button class="btn btn-danger">Add a thing</button></a> 
          <% else %>
            <ul class="nav">
              <li><%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> </li>
              <li><%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>


  <div class="container">
    <div class="row">
      <div class="span12">
        <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value%></div>  
        <% end %>

<%= yield %>

      </div>
    </div>
  </div>  

</body>
</html>